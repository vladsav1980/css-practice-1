<div class="page">
    <header class="page_content">
        <div class="page_block">
            <div class="header">
                <div class="">
                    {{>logo}}
                </div>

                <nav class="header_nav">
                    <div class="header_nav_right">
                        {{>nav list=header}}
                    </div>
                </nav>
            </div>
        </div>

    </header>

    <section class="page_block">
        <div class="hero">
            {{#with hero}}
            {{>hero title=title text=text}}
            <a class="button" href="{{button.url}}">{{button.text}}</a>
            {{/with}}
        </div>
    </section>

    <section class="page_block">
        <div class="flex_container">
            {{#each preview}}
            <div class="flex_item">
                {{>cardPreview data=this}}
            </div>
            {{/each}}
        </div>
    </section>

    <div class="page_block">
        <main>
            <div class="">
                <div class="list_header ">


                    <h2 class="list_title">List of Posts</h2>

                    <div class="category_list">
                        {{#each categories}}
                        <button class="category_button">{{text}}</button>
                        {{/each}}
                    </div>

                </div>

                <div class="list col-7">
                    {{#each news}}
                    {{>cardPost data=this}}
                    {{/each}}
                </div>

                <div class="col-5">
                    <aside class="list_aside">
                        <div class="about">
                            <h4 class="about_title">About</h4>
                            <p class="about_text">{{about}}</p>
                        </div>
                        {{>linkList data=archive title="Archives"}}
                        {{>linkList data=social title="Social"}}
                    </aside>
                </div>

            </div>


        </main>

    </div>


    <footer class="page_block">

        <div class="footer">
            <div class="">
                {{>logo}}
                <span class="footer_copyright">Copyright 2023</span>
            </div>

            {{#each footer}}
            <div class="">
                <span class="footer_title">{{title}}</span>
                {{>nav list=links isVertical=true}}
            </div>
            {{/each}}

        </div>
    </footer>


</div>