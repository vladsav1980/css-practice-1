<header>
    <div class="header">
        <div class="">
            {{>logo}}
        </div>

        <nav class="header_nav">
            <div class="header_nav_right">
                {{>nav list=header}}
            </div>
        </nav>
    </div>
</header>

<main class="main">
    {{#with messages}}
    <div class="messages">
        <h1 class="messages_title">{{title}}</h1>
        {{#each list}}
        <div class="msg">
            <strong class="msg_name">{{name}}</strong>
            <p class="msg_text">{{message}}</p>
            <span class="msg_day">{{day}}</span>
        </div>
        {{/each}}
        <a href="#" class="messages_link">All messages</a>
    </div>
    {{/with}}

    <form class="form">
        {{#with form}}
        <h2 class="form_title">{{title}}</h2>
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" class="form_input">
            {{/each}}
        </div>
        <div class="form_checkbox">
            {{#with checkbox}}
            <input type="checkbox" name="{{name}}" id="{{name}}">

            <label for="{{name}}">
                <div></div>{{label}}
            </label>
            {{/with}}
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
        {{/with}}
    </form>
</main>

<div class="advantages">
    {{#each advantages}}
    <div>
        <strong>{{title}}</strong>
        <p>{{text}}</p>
    </div>
    {{/each}}
</div>

<footer>

    <div class="footer">
        <div class="">
            {{>logo}}
            <span class="footer_copyright">Copyright 2023</span>
        </div>

        {{#each footer}}
        <div class="">
            <span class="footer_title">{{title}}</span>
            {{>nav list=links isVertical=true}}
        </div>
        {{/each}}

    </div>
</footer>