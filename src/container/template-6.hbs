<header>
    <div class="header">
        <div class="">
            {{>logo}}
        </div>

        <nav class="header_nav">
            <div class="header_nav_right">
                {{>nav list=header}}
            </div>
        </nav>
    </div>
</header>

<main class="main">

    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}


    <form class="form">
        {{#with form}}
        <h2 class="form_title">{{title}}</h2>
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" class="form_input" id="inputs_{{id}}">
            {{/each}}
        </div>
        <div class="form_checkbox">
            {{#with checkbox}}
            <input type="checkbox" name="{{name}}" id="{{name}}">

            <label for="{{name}}">
                <div></div>{{label}}
            </label>
            {{/with}}
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
        {{/with}}
    </form>
</main>

{{#with updates}}
<div class="messages">
    <h1 class="messages_title">{{title}}</h1>
    {{#each list}}
    <div class="msg_block">
        <div class="user_avatar" id="avatar_{{nickname}}">


            <script>

                var avatarElement = document.getElementById('avatar_{{nickname}}');

                var randomColor = '#' + Math.floor(Math.random() * 16777215).toString(16);

                avatarElement.style.backgroundColor = randomColor;
            </script>


            <span>32x32</span>
        </div>
        <div class="msg">
            <strong class="msg_name">{{nickname}}</strong>
            <p class="msg_text">{{description}}</p>

        </div>
    </div>

    {{/each}}
    <a href="{{show_all.url}}" class="messages_link">{{show_all.text}}</a>
</div>
{{/with}}

{{#with expirience}}
<div class="feedback">
    <div class="feedback_title">
        <h1>{{title}}</h1>
    </div>

    <div class="feedback_badge">
        {{badge}}
    </div>

    <div class="experience">

        {{#each list}}
        <div>
            <strong>{{name}}</strong>
            <p>{{details}}</p>
        </div>
        {{/each}}
    </div>

</div>
{{/with}}


<footer>

    <div class="footer">
        <div class="">
            {{>logo}}
            <span class="footer_copyright">Copyright 2023</span>
        </div>

        {{#each footer}}
        <div class="">
            <span class="footer_title">{{title}}</span>
            {{>nav list=links isVertical=true}}
        </div>
        {{/each}}

    </div>
</footer>